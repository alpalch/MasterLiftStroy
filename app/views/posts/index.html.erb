<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Photo</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= image_tag post.photo.url(:small) unless post.photo_file_size == nil %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td id="<%= 'admin-stuff' unless current_user.try(:id)%>"><%= link_to 'Show', post%></td>
        <td id="<%= 'admin-stuff' unless current_user.try(:id)%>"><%= link_to 'Edit', edit_post_path(post) %></td>
        <td id="<%= 'admin-stuff' unless current_user.try(:id)%>"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>      </tr>
    <% end %>
  </tbody>
</table>

<br>

<a href="<%= new_post_path %>" id="<%= 'admin-stuff' unless current_user.try(:id)%>">New Post</a>
