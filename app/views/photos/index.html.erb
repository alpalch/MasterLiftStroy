<p id="notice"><%= notice %></p>

<table>
  <thead>
  <tr>
    <th>Image</th>
    <th>Title</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @photos.each do |photo| %>
      <tr>
        <td><%= image_tag photo.image.url(:small) %></td>
        <td><%= photo.title %></td>
        <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
        <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td></tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add image to gallery', new_photo_path %>
